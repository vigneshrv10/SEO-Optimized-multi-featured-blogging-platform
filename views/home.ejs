    <script>
        // Search functionality
        const searchInput = document.getElementById('search-input');
        const resetBtn = document.getElementById('reset-btn');
        const searchResults = document.querySelector('.search-results');
        
        let debounceTimer;
        
        searchInput.addEventListener('input', function() {
            clearTimeout(debounceTimer);
            
            if (this.value.length > 0) {
                resetBtn.style.display = 'block';
                
                debounceTimer = setTimeout(() => {
                    fetchSearchResults(this.value);
                }, 300);
            } else {
                resetBtn.style.display = 'none';
                searchResults.style.display = 'none';
            }
        });
        
        function clearSearch() {
            searchInput.value = '';
            resetBtn.style.display = 'none';
            searchResults.style.display = 'none';
        }
        
        function fetchSearchResults(query) {
            fetch('/search', {
        method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ payload: query })
            })
            .then(response => response.json())
            .then(data => {
                const resultsContainer = document.querySelector('.search-results-container');
                resultsContainer.innerHTML = '';
                
                const results = data.payload || [];
                
                if (results.length === 0) {
                    resultsContainer.innerHTML = '<p class="no-results">No results found</p>';
                } else {
                    results.forEach(post => {
                        const resultItem = document.createElement('div');
                        resultItem.className = 'search-result-item';
                        resultItem.innerHTML = `
                            <a href="/posts/${post._id}">
                                <h3>${post.title}</h3>
                                <p>${post.preview || post.content?.substring(0, 100) || ''}...</p>
                                <div class="result-meta">
                                    <span><i class="fas fa-user"></i> ${post.author}</span>
                                </div>
                            </a>
                        `;
                        resultsContainer.appendChild(resultItem);
                    });
                }
                
                searchResults.style.display = 'block';
            })
            .catch(error => {
                console.error('Error fetching search results:', error);
                const resultsContainer = document.querySelector('.search-results-container');
                resultsContainer.innerHTML = '<p class="no-results">Error fetching results. Please try again.</p>';
                searchResults.style.display = 'block';
            });
        }
        
        // Close search results when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.search')) {
                searchResults.style.display = 'none';
            }
        });
</script>
